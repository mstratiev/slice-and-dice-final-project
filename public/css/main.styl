.line-with-shadow 
	border: 0; 
	height: 1px;
	position relative
	background-color: white

.line-with-shadow:before 
	top: -6px;
	height: 1em;
	left 0

.line-with-shadow:after 
	content:'';
	height: 0.5em;
	top: -7px;
	left 0


.line-with-shadow:before, .line-with-shadow:after 
	content: '';
	position: absolute;
	width: 100%;


.line-with-shadow, .line-with-shadow:before 
	background: radial-gradient(ellipse at center, rgba(0,0,0,0.1) 0%,rgba(0,0,0,0) 75%);


.line-with-shadow:after 
	background: #eaeaea;

